<SigPlotMimic as |mimicGroup|>
<div class="container-fluid fill">
    <div class="row">
        <div class="col-md" style="min-height: 400px; max-height: 400px; margin: 10px;">
            <h4 class=>Choose Location:</h4>
            <ul class="list-group scrollable" style="max-height: 400px; margin: 10px;">
                {{#each @model.locations as |location|}}
                <button type="button" class="list-group-item list-group-item-action" {{on "click" (fn this.setLocation location) }}>{{location}}</button>
                {{/each}}
            </ul>
        </div>
        <div class="col-md" style="margin: 10px;">
            <SigPlot id="plot_direct" style="width: 100%; height: 100%;" @options={{hash cmode=6}} @mimic={{mimicGroup.bidir}} as |plot|>
                <SigPlotHrefLayer @plot={{plot}} @href={{this.rawHref}} />
            </SigPlot>
        </div>
    </div>
    <div class="row">
        <div class="col-md" style="min-height: 400px; margin: 10px;">
            <div class="row">
                <div class="col-md">
                    <h4>Choose File:</h4>
                </div>
                <div class="col-md" >
                        <button class="button3" {{on "click" (fn this.goback) }}>Back </button>
                </div>
            </div>
            <div class="row">
                <ul class="list-group scrollable fillwidth" style="max-height: 400px; min-height: 200px; margin: 10px;">
                    {{#each this.files as |file|}}
                    <button type="button" class="list-group-item list-group-item-action" {{on "click" (fn this.plotFile file) }}>
                        <p class="list-group-item-text {{file.type}}">
                            {{file.filename}}
                        </p>
                    </button>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md" style="margin: 10px;">
            <SigPlot id="plot_sds" style="width: 100%; height: 100%;" @options={{hash cmode=6}} @mimic={{mimicGroup.bidir}} as |plot|>
                <SigPlotHrefLayer @plot={{plot}} @href={{this.sdsHref}} @layerType="SDS" @options={{hash usetiles=true}}/>
            </SigPlot>
        </div>
    </div>
</div>
</SigPlotMimic>
